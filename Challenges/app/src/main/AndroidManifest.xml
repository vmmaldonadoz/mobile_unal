<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vmmaldonadoz.challenges">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SqliteChallengeActivity"
            android:label="@string/challenge_8"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CompanyActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/challenge_8"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MapsActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/challenge_9"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WebserviceActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/challenge_10"
            android:screenOrientation="portrait" />
    </application>

</manifest>
